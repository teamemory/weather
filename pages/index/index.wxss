  width:32rpx;
  height:30rpx;
  margin: 0 auto;
  padding-bottom: 15rpx;
}
.speedList{
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  text-align: center;
}
.speedfont{
  font-size: 24rpx;
  padding-bottom: 15rpx;
}
.speedword{
  font-size:30rpx;
  font-weight: bold;
}
.speedLast{
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
}

