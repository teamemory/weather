/*另外一个页面*/

/*背景图片*/
.bg{
  width:750rpx;
  height: 1201rpx;
  position:absolute;
  z-index: -100;
}
/*整体弹性布局*/
.index{
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  width:100%;
  height:1201rpx;
}
/*第一块弹性布局*/
.week-weather{
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  background: rgba(0,0,0,.2);
  margin:20rpx;
  padding:20rpx;
  border-radius: 5px;
  margin-bottom: 0;
}
/*实际天气*/
.show-weather{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  padding:0 10rpx;
  text-align: center;
  margin-bottom: 10rpx;
}
.weater-wind{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}
.week-title{
  color:#fff;
  font-size: 32rpx;
  border-bottom:1px solid #BEC0C1;
  padding-bottom:15rpx;
  font-family: MicroSoft Yahei;
  margin-bottom:20rpx;
}
.wpic{
  width:33rpx;
  height:33rpx;
}

/*第一行的天气阴晴*/
.weater-item{
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  text-align: center;
}
.weater-item-w{
  color:#fff;
  font-size: 24rpx;
  font-family: MicroSoft Yahei;
  margin-bottom:10rpx;
}
.weater-item-d{
   color:#fff;
   font-size: 24rpx;
   font-family: MicroSoft Yahei;
   margin-bottom:16rpx;
}

/*第一行的风速*/
.windf{
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  text-align: center;
  margin-left:-40rpx;
  margin-right: 20rpx;
}
.imp{
  margin-left:-0;
  margin-right: 0;
}
.feng{
  width:32rpx;
  height:30rpx;
  align-self: center;
  margin-bottom:18rpx;
}

/*第二行的内容*/
.weather-helper{
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  background: rgba(0,0,0,.2);
  border-radius: 5px;
  margin: 20rpx;
  padding: 0 20rpx;
  margin-top:0;
}
.helper{
  color:#fff;
  font-family: MicroSoft Yahei;
  border-bottom:1px solid #BEC0C1;
  padding-bottom:17rpx;
  font-size: 32rpx;
}

.weather-pic{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}
.wpimage{
  width:86rpx;
  height:86rpx;
  margin-bottom:20rpx;
}
.wpi{
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  margin-top: 20rpx;
  text-align: center;
  padding:20rpx 20rpx;
}
/*按钮*/
.btn{
  width:331rpx;
  height:79rpx;
}
.btn-container{
  text-align: center;
  margin: 0 auto;
}
/*底部按钮*/
.bworld{
  color:#fff;
  text-align: center;
  padding-bottom:60rpx;
  font-size: 25rpx;
  font-family: MicroSoft Yahei;
}